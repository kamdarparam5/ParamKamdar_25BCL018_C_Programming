#include <stdio.h>

int main() {
    float a, b;
    printf("Enter First Number: ");
    scanf("%f",&a);
    printf("Enter Second Number: ");
    scanf("%f",&b);

    printf("Addition = %f\n", a + b);
    printf("Subtraction = %f\n", a - b);
    printf("Multiplication = %f\n", a * b);

    if (b != 0)
        printf("Division = %f\n", a / b);
    else
        printf("Division not possible (denominator is 0)\n");

    return 0;
}
